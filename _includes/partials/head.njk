<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>{{ title or 'StyleMe - Fashion & Outfit Guides' }}</title>

<!-- SEO Meta Tags -->
<meta name="description" content="{{ description or 'Complete style guides for every occasion' }}">
<meta name="keywords" content="{{ keywords or 'fashion, style guide, outfit ideas' }}">
<link rel="canonical" href="{{ page.url | url }}">

<!-- OpenGraph Meta Tags -->
<meta property="og:title" content="{{ title or 'StyleMe - Fashion & Outfit Guides' }}">
<meta property="og:description" content="{{ description or 'Complete style guides for every occasion' }}">
<meta property="og:type" content="article">
<meta property="og:url" content="{{ page.url | url }}">
<meta property="og:image" content="{{ ogImage or '/content/images/default-og-image.jpg' }}">
<meta property="og:site_name" content="StyleMe">

<!-- Twitter Card Meta Tags -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ title or 'StyleMe - Fashion & Outfit Guides' }}">
<meta name="twitter:description" content="{{ description or 'Complete style guides for every occasion' }}">
<meta name="twitter:image" content="{{ ogImage or '/content/images/default-og-image.jpg' }}">

<!-- Structured Data for Google -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Article",
  "headline": "{{ title }}",
  "description": "{{ description }}",
  "image": "{{ ogImage or '/content/images/default-og-image.jpg' }}",
  "datePublished": "{{ page.date or '2024-01-01' }}",
  "dateModified": "{{ page.date or '2024-01-01' }}",
  "author": {
    "@type": "Organization",
    "name": "StyleMe"
  },
  "publisher": {
    "@type": "Organization",
    "name": "StyleMe",
    "logo": {
      "@type": "ImageObject",
      "url": "/images/logo.png"
    }
  }
}
</script>

<!-- CSS -->
<link rel="stylesheet" href="/css/style.css">
